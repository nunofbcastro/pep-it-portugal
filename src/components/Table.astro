---
interface Props {
  headers: string[];
  rows: Record<string, string>[];
  title?: string;
}

const { headers, rows, title } = Astro.props;
---

<div class="overflow-x-auto shadow-md sm:rounded-lg bg-white dark:bg-slate-800 my-8 transition-colors">
  {title && <div class="px-6 py-4 border-b border-slate-200 dark:border-slate-700 bg-slate-100 dark:bg-slate-700 transition-colors">
        <h3 class="text-lg font-medium text-slate-900 dark:text-white">{title}</h3>
    </div>
  }
  <table class="w-full text-sm text-left text-slate-600 dark:text-gray-400">
    <thead class="text-xs text-slate-700 dark:text-gray-200 uppercase bg-slate-100 dark:bg-slate-700 transition-colors">
      <tr>
        {headers.map((header) => (
          <th scope="col" class="px-6 py-3">
            {header}
          </th>
        ))}
      </tr>
    </thead>
    <tbody>
      {rows.map((row) => (
        <tr class="bg-white dark:bg-slate-800 border-b border-slate-200 dark:border-slate-700 hover:bg-slate-50 dark:hover:bg-slate-700 transition-colors">
          {headers.map((header) => (
             <td class="px-6 py-4 font-medium text-slate-900 dark:text-white max-w-xs break-words">
                {row[header]}
             </td>
          ))}
        </tr>
      ))}
    </tbody>
  </table>
</div>
